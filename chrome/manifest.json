{
  "manifest_version": 3,
  "name": "HN Pop-up",
  "description": "Hover on a Hacker News Username to see their Profile",
  "version": "2.0",
  "host_permissions": [
    "http://news.ycombinator.com/*",
    "https://news.ycombinator.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*",
        "https://news.ycombinator.com/*"
      ],
      "css": [ "jTippy/jTippy.css"],
      "js": [ "js/jquery.js",
      "jTippy/jTippy.js", "js/main.js"]
    }
  ],
 
  "web_accessible_resources": [{ 
  "resources": ["/img/*"],
  "matches": ["<all_urls>"]
}],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}